{{ #. }}
<div class="champion-panel panel {{ team }}" data-name="{{ champ.name }}">
	{{#champ}}

	<div class="portrait btn img" style="background: url('{{ imgSrc }}')" title="{{ name }}" ></div>

		{{#passive}}
		<div class="spell passive btn img"
			 style="background: url('{{spriteSrc}}') -{{image.x}}px -{{image.y}}px;"
					 title="{{ name }}" data-type="passive"></div>
		{{/passive}}
	{{/champ}}
	{{ resetIndex }}
	<div class="champ-spells padded-right">
		{{ #champ.spells }}
		{{!--TODO: hover / click--}}<div class="champion-spell spell btn img"
			 style="background: url('{{spriteSrc}}') -{{image.x}}px -{{image.y}}px;"
			 title="{{name}}" data-index-1="{{ index }}" data-type="ability">
		<div class="champ-spell-border"></div></div>
		{{ /champ.spells }}
		{{ resetIndex }}
	</div>


	{{!--(champSelect)--}}

	<div class="panel-control btn close table"><i class="fa fa-times fa-2x table-cell middle"></i></div>

</div>
{{ /. }}
