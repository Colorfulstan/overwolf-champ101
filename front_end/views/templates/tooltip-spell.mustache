<div class="table">
	<div class="col-xs-6 padded-right line-right">
		<h2 class="spell-name">{{name}}</h2>

		<p class="spell-description text-body">
			{{#tooltip}}{{{.}}}{{/tooltip}}
			{{^tooltip}}{{{description}}}{{/tooltip}}
		</p>
	</div>
	<div class="col-xs-6 padded-left line-left collapse-border-left">
		<div class="spell-values row">
			<table class="spell-values-table">
				<tbody>
				{{#cooldownBurn}} <tr> <td>Cooldown</td> <td>{{.}}</td> </tr> {{/cooldownBurn}}
				{{#costBurn}} <tr> <td>Cost</td> <td>{{.}} {{costType}}</td> </tr> {{/costBurn}}
				{{#rangeBurn}} <tr> <td>Range</td> <td>{{.}}</td> </tr> {{/rangeBurn}}
				</tbody>
			</table>
		</div>
		{{ #videoAvailable }}
		<div id="spell-video-container" class="row">
		</div>
		{{ /videoAvailable }}
	</div>
</div>