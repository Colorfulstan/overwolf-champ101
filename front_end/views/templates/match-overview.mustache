<div id="match-participants">
	<div class="team blue col-xs-5">
		{{#blue}}
		{{#champ}}
			<div title="{{name}}" class="portrait img"
				 style="background: url('{{spriteSrc}}') -{{image.x}}px -{{image.y}}px;"></div>
		{{/champ}}
		{{ /blue }}
	</div>
	<div id="vs" class="col-xs-2">
		<button class="btn show-team blue pull-left">show blue team</button>
		<p>VS</p>
		<button class="btn show-team purple pull-right">show purple team</button>
	</div>
	<div class="team purple col-xs-5 pull-right">
		{{ #purple }}
				{{#champ}}
					<div title="{{name}}" class="portrait img"
						 style="background: url({{spriteSrc}}) -{{image.x}}px -{{image.y}}px;"></div>
				{{/champ}}
		{{ /purple }}
	</div>
</div>