<header class="padded-top-2 padded-left-2 padded-right-2 padded-bot-half">
	{{#summonerId}}
		<div class="app-buttons padded-top padded-right">
			<div class="btn btn-info icon"><i class="fa fa-info-circle fa-lg"></i></div>
			<div class="btn btn-cancel icon"><i class="fa fa-times fa-lg"></i></div>
		</div>
	{{/summonerId}}
	<div class="row">
		<div class="logo text-center padded"><img class="pull-left" src="../assets/img/logo.png"
												  alt="Champ 101 - Basic Champion Knowledge" width="100px" />
			<h2 class="padded-top col-xs-8">App<br>Settings</h2>
		</div>
	</div>
</header>

<div class="row padded-left-2 padded-right-2 padded-top padded-bot">
	<div class="row padded-bot">
		<div class="padded-top">
			<input type="checkbox" name="startWithGame" id="startWithGame" can-value="startWithGame" />
			<label for="startWithGame">Start app when entering a game
				<a class="whats-this" title="{{startWithGameInfo}}" href="#">(What's this?)</a></label>
		</div>
	</div>
	<hr class="padded-sides-neg-2">
	<form onsubmit="return false" id="summoner-form" class="padded-top">
		<div class="text-center">
			<label for="summoner-name-input" class="btn">{{#summonerId }}<strong>{{ summonerName }} | {{ server }}</strong>{{/summonerId }}
			</label>
			<br>
			<input type="text" name="summoner-name-input" id="summoner-name-input" placeholder="summoner name"
				   can-value='summonerName' autofocus class="muted"/></div>

		<div>
			<!--<label for="server-region-select">Region</label>-->
			<select name="server-region-select" id="server-region-select" can-value='server' class="browser-default">
				<option hidden>No region set!</option>
				<option value="BR">Brazil (BR)</option>
				<option value="EUNE">EU Nordic & East (EUNE)</option>
				<option value="EUW">EU West (EUW)</option>
				<option value="KR">KR</option>
				<option value="LAN">Latin American North (LAN)</option>
				<option value="LAS">Latin American South (LAS)</option>
				<option value="NA">North America (NA)</option>
				<option value="OCE">Oceania (OCE)</option>
				<option value="RU">Russia (RU)</option>
				<option value="TR">Turkey (TR)</option>
				<!--<option value="PBE">Public Beta Environment (PBE)</option>-->
			</select></div>

	<ul class="padded-bot">
		<li><p class="muted">To receive data for your game you need to set your summoner (in-game) name and region.
		</p>
		</li>
	</ul>

	<hr class="padded-sides-neg-2">
	<table class="hoverable">
		<thead class="no-border">
		<tr>
			<th id="dropdown-hotkeys" onclick="$('#hotkeys-rows').slideToggle()" class="btn">In-Game-Hotkeys (click to
																							 show)
			</th>
		</tr>
		</thead>
		<tbody id="hotkeys-rows" style="display: none;">
		{{#hotkeys}}
			<tr onclick="location.href='overwolf://settings/hotkeys#{{id}}';" class="btn hotkey-btn">
				<td class="padded-top-half padded-bot-half"><a href="#">{{ title }}</a></td>
				<td class="padded-top-half padded-bot-half"><a href="#">{{ string }}</a></td>
			</tr>
		{{/hotkeys}}
		</tbody>
	</table>

	<div class="padded-top-2 padded-bot">
		<button type="submit" id="btn-save-close" class="btn col-xs-6 success"><i class="fa fa-check"></i></button>
		<div id="btn-cancel" class="btn btn-cancel col-xs-6 failed"><i class="fa fa-times"></i></div>
	</div>
	</form>
</div>