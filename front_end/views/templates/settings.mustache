<header class="padded-top-2 padded-left-2 padded-right-2 padded-bot-half">
	{{#summonerId}}
		<div class="app-buttons padded-top padded-right">
			<div class="btn btn-info icon"><i class="fa fa-info-circle fa-lg"></i></div>
			<div class="btn btn-cancel icon"><i class="fa fa-times fa-lg"></i></div>
		</div>
	{{/summonerId}}
	<div class="row">
		<div class="logo padded"><img class="pull-left" src="../assets/img/logo.png"
									  alt="Champ 101 - Basic Champion Knowledge" width="100px" />

			<div class="header--right padded-left padded-top-half ">
				<h2 class="padded-bot-half page-heading">Settings</h2>

				<div class="rog-logo">
					<p class="muted text-small text-center">presented by:</p>
					<a href="http://rog.asus.com/" target="_blank">
						<img src="../assets/img/rog_logo_wide.png" alt="ROG - Republic of gamers" height="30">
					</a>
				</div>
			</div>
		</div>
	</div>
</header>

<div class="row padded-left-2 padded-right-2 padded-top padded-bot">
	<div class="row padded-bot">
		<div class="padded-top">
			<input type="checkbox" name="startWithGame" id="startWithGame" can-value="startWithGame" />
			<label for="startWithGame">Start app when entering a game
				<a class="whats-this" title="{{startWithGameInfo}}" href="#">(?)</a></label>
			<input type="checkbox" name="closeMatchWithGame" id="closeMatchWithGame" can-value="closeMatchWithGame" />
			<label for="closeMatchWithGame">Close match Window after game ends
				<a class="whats-this" title="{{closeMatchWithGameInfo}}" href="#">(?)</a></label>
			<!-- TODO: reenable when reimplemented match-fetching by summonerID -->
			<!--<input type="checkbox" name="isWaitingForStableFps" id="isWaitingForStableFps" can-value="isWaitingForStableFps" />-->
			<!--<label for="isWaitingForStableFps">Wait for stable FPS-->
				<!--<a class="whats-this" title="{{isWaitingForStableFpsInfo}}" href="#">(?)</a></label>-->
		</div>
	</div>
	<hr class="padded-sides-neg-2">
		<table class="hoverable">
			<thead class="no-border">
			<tr>
				<th id="dropdown-hotkeys" onclick="$('#hotkeys-rows').slideToggle()" class="btn col-xs-12">
					<h5 class="padded-top-half"><a href="#">In-Game-Hotkeys</a><div class="text-small">(click to show)</div></h5>


				</th>
			</tr>
			</thead>
			<tbody id="hotkeys-rows" style="display: none;">
			{{#hotkeys}}
				<tr role="link" data-title="{{ title }}" data-key="{{ string }}" id="{{ id }}" class="btn hotkey-btn">
					<td class="padded-top-half padded-bot-half"><a href="#">{{ title }}</a></td>
					<td class="padded-top-half padded-bot-half"><a href="#">{{ string }}</a></td>
				</tr>
			{{/hotkeys}}
			</tbody>
		</table>
	<hr class="padded-sides-neg-2">
		<div class="padded-top padded-bot">
			<!--{{^summonerId}}-->
				<!--<span class="padded-bot text-danger">You need to set a summoner-name and region</span><br>-->
			<!--{{/summonerId}}-->
			{{#startWithGameMessage}}
				<span class="padded-bot text-danger">{{.}}</span><br>
			{{/startWithGameMessage}}
			<div class="padded-top">
				<button type="submit" id="btn-save-close" class="btn col-xs-6 success"><i class="fa fa-check"></i> </button>
				<button id="btn-cancel" class="btn btn-cancel col-xs-6 failed"><i class="fa fa-times"></i></button>
			</div>
		</div>
</div>