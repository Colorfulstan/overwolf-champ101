{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
	"name": "LoL Champion Info3",
	"version": "0.10.3",
	"minimum-overwolf-version": "0.87.00",
	"author": "Colorfulstan",
	"icon": "assets/img/icon.png",
	"icon_gray": "assets/img/icon_gray.png",
	"description": "Get infos about the champs in your League of Legends match. Forgot what skills that rare picked champion has? Want some pointers for how to play with or against that champion? This app gives you a quick lookup for all neccessary champion information right in your game. Fast and simple!"
  },
  "data": {
	  "launch_events": [
		{
		  "event": "GameLaunch",
		  "event_data": {
			"game_ids": [5426, 54261]
		  },
		  "start_minimized": true
		}
	  ],
	"start_window": "Main",
	"windows": {
	  "Main": {
		"file": "views/main.html",
		"transparent": true,
		"resizable": false,
		"size": {"width": 400,"height": 1200},
		"min_size": {"width": 400},
		"max_size": {"width": 400}
	  },
	  "Settings": {
		"file": "views/settings.html",
		"transparent": true,
		"resizable": false,
		  "size": {"width": 400,"height": 1200},
	  	"min_size": {"width": 400},
		"max_size": {"width": 400}

	  },
	  "Feedback": {
		"file": "views/feedback.html",
		"transparent": true,
		"resizable": false,
		"show_in_taskbar": true,
		"size": {"width": 400,"height": 1200},
		"min_size": {"width": 400, "height": 400},
		"max_size": {"width": 800, "height": 800}
	  },
	  "Match": {
		"file": "views/match.html",
		"transparent": true,
		"resizable": false,
		"show_in_taskbar": false,
		"size": {"width": 800, "height": 1200},
		"min_size": {"width": 800, "height": 1200},
		"max_size": {"width": 800, "height": 1200}
	  }
	},
	"hotkeys": {
		"toggle_match": {"title":"Minimise/Restore Match Dock", "action-type": "custom", "default": "Ctrl+Shift+Space"},
		"toggle_panels": { "title": "Collapse/Expand Match Dock", "action-type": "custom", "default": "Ctrl+Space"},
		"open_panels_team_blue": { "title": "Open Champions Team Blue", "action-type": "custom", "default": "Num 1"},
		"open_panels_team_red": { "title": "Open Champions Team Red", "action-type": "custom", "default": "Num 2"},
		"close_panels": { "title": "Close all Champions", "action-type": "custom", "default": "Ctrl+Num 1"}
	}
  },
  "permissions": [
	"Hotkeys",
	"GameInfo",
	"Extensions"
  ],
  "externally_connectable": {
	"matches": [
	  "http://*.krispin.it/*"
	]
  }
}