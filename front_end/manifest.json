{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
	"name": "LoL Champion Info",
	"version": "0.3.5",
	"minimum-overwolf-version": "0.77.10",
	"author": "Colorfulstan",
	"icon": "assets/img/icon.png",
	"icon_gray": "assets/img/icon_gray.png",
	"description": "Get infos about the champs in your League of Legends match. Forgot what skills that rare picked champion has? Want some pointers for how to play with or against that champion? This app gives you a quick lookup for all neccessary champion information right in your game. Fast and simple!"
  },
  "data": {
	  "launch_events": [
		{
		  "event": "GameLaunch",
		  "event_data": {
			"game_ids": [5426, 54261]
		  },
		  "start_minimized": true
		}
	  ],
	"start_window": "Main",
	"windows": {
	  "Main": {
		"file": "views/main.html",
		"transparent": true,
		"resizable": true
	  },
	  "Settings": {
		"file": "views/settings.html",
		"transparent": true,
		"resizable": false
	  },
	  "Match": {
		"file": "views/match.html",
		"transparent": true,
		"resizable": true,
		"show_in_taskbar": false
	  }
	},
	"hotkeys": {
	  "hide_match_window": {
		"title": "Hide Match Window",
		"action-type": "custom",
		"default": "Tab"
	  }
	},
	"permissions": [
	  "Hotkeys",
	  "GameInfo"
	]
  },
  "externally_connectable": {
	"matches": [
	  "http://*.krispin.it/sites/tests/riot-api"
	]
  }
}